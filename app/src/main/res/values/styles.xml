<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar theme. -->
    <style name="ToolBarStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorSelectedText</item>
    </style>

    <!-- Rounded button. -->
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <!-- Date Picker Theme -->
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorMainTheme</item>
        <item name="colorControlActivated">@color/colorMainTheme</item>
        <item name="colorControlHighlight">@color/colorText</item>
    </style>

    <!-- MyNews Theme -->
    <style name="MyNewsTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorMainTheme</item>
        <item name="colorAccent">@color/colorMainTheme</item>
    </style>

    <!-- Dialog Theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorMainTheme</item>
    </style>

    <!-- ShowCase Custom Themes -->
    <style name="CustomShowcaseTheme1" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/colorShowCaseBackground</item>
        <item name="sv_showcaseColor">@color/colorSelectedText</item>
        <item name="sv_buttonText">@string/button_1_help</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="CustomShowcaseTheme1">
        <item name="sv_buttonText">@string/button_2_help</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">@color/colorSelectedText</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/colorSelectedText</item>
    </style>

</resources>
